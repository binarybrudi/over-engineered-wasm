@inherits ViewModelComponentBase<Diamond.Logic.ViewModel.Weather.ViewModel.Contract.IWeatherWidgetViewModel>

<div class="widget-container">
  <div class="weather-widget">
    <div class="widget-content">
      <div class="date-time">
        @ViewModel.CurrentWeatherForecast.Date.ToString("M")
      </div>

      <div class="temperature-container">
        <div class="weather-icon">
          <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <circle cx="12" cy="12" r="5" fill="currentColor"/>
            <path
              d="M12 2v2M12 20v2M4.93 4.93l1.41 1.41M17.66 17.66l1.41 1.41M2 12h2M20 12h2M4.93 19.07l1.41-1.41M17.66 6.34l1.41-1.41"
              stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          </svg>
        </div>
        <div class="temperature">@ViewModel.CurrentWeatherForecast.TemperatureÂ°C</div>
      </div>

      <div class="details-container">
        <div class="details-item">
            <span class="details-icon">
              <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path
                  d="M12,2.5c-2.2,0-4,1.8-4,4c0,1.7,1.1,3.2,2.7,3.8C9.4,11.5,8.5,13.2,8.5,15c0,1.9,1.6,3.5,3.5,3.5s3.5-1.6,3.5-3.5 c0-1.8-0.9-3.5-2.2-4.7c1.6-0.6,2.7-2.1,2.7-3.8C16,4.3,14.2,2.5,12,2.5z M12,17c-1.1,0-2-0.9-2-2c0-1.4,0.9-2.6,2-3.2 c1.1,0.6,2,1.8,2,3.2C14,16.1,13.1,17,12,17z M12,8.8c-1.3,0-2.3-1-2.3-2.3s1-2.3,2.3-2.3s2.3,1,2.3,2.3S13.3,8.8,12,8.8z"
                  fill="currentColor"/>
              </svg>
            </span>
          <span class="details-value">@ViewModel.CurrentWeatherForecast.Humidity%</span>
        </div>

        <div class="divider"></div>

        <div class="details-item">
            <span class="details-icon">
              <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path
                  d="M3,12h10.5c0.8-1.1,2.1-1.8,3.5-1.8c2.4,0,4.3,1.9,4.3,4.3c0,2.4-1.9,4.3-4.3,4.3c-1.4,0-2.7-0.7-3.5-1.8H3"
                  stroke="currentColor" stroke-width="1.5" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M4,8h8.5c0.8-1.1,2.1-1.8,3.5-1.8c2.4,0,4.3,1.9,4.3,4.3" stroke="currentColor"
                      stroke-width="1.5" fill="none" stroke-linecap="round" stroke-linejoin="round"
                      stroke-dasharray="1,3"/>
                <path d="M5,16h4.5c0.8,1.1,2.1,1.8,3.5,1.8c2.4,0,4.3-1.9,4.3-4.3" stroke="currentColor"
                      stroke-width="1.5" fill="none" stroke-linecap="round" stroke-linejoin="round"
                      stroke-dasharray="1,3"/>
              </svg>
            </span>
          <span class="details-value">@ViewModel.CurrentWeatherForecast.WindSpeed m/s</span>
        </div>
      </div>
    </div>
  </div>
</div>
    