@inherits ViewModelComponentBase<Diamond.Logic.ViewModel.Weather.ViewModel.Contract.IWeatherWidgetViewModel>

<div class="container">
    <div class="widget widget__background">
        <svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
            <!-- Sun circle -->
            <circle cx="100" cy="100" r="40" fill="#FFD700" stroke="#FF8C00" stroke-width="2" />

            <!-- Sun rays -->
            <line x1="100" y1="30" x2="100" y2="10" stroke="#FF8C00" stroke-width="6" stroke-linecap="round" />
            <line x1="100" y1="170" x2="100" y2="190" stroke="#FF8C00" stroke-width="6" stroke-linecap="round" />
            <line x1="30" y1="100" x2="10" y2="100" stroke="#FF8C00" stroke-width="6" stroke-linecap="round" />
            <line x1="170" y1="100" x2="190" y2="100" stroke="#FF8C00" stroke-width="6" stroke-linecap="round" />

            <line x1="51" y1="51" x2="37" y2="37" stroke="#FF8C00" stroke-width="6" stroke-linecap="round" />
            <line x1="149" y1="51" x2="163" y2="37" stroke="#FF8C00" stroke-width="6" stroke-linecap="round" />
            <line x1="51" y1="149" x2="37" y2="163" stroke="#FF8C00" stroke-width="6" stroke-linecap="round" />
            <line x1="149" y1="149" x2="163" y2="163" stroke="#FF8C00" stroke-width="6" stroke-linecap="round" />
        </svg>
    </div>
    <div class="widget widget__content">
        <span class="text add_celsius">@ViewModel.CurrentWeatherForecast.Temperature</span>
    </div>
</div>
    