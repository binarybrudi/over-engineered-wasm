@page "/"
@inherits BbComponentBase

@using Diamond.Ui.Weather.Widgets
@using Diamond.Ui.Renderer

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<div class="stack">
    <div style="width: 100px;">
        <WeatherWidget />
    </div>
    <div style="width: 100px">
        <RendererView />
    </div>
    <div>
        <span>@Count</span>
    </div>
    <div>
        <button onmouseup="@(Increment)">increase</button>
    </div>
</div>

@code
{
    public int Count { get; set; } = 0;

    private void Increment()
    {
        Count++;
    }
}
